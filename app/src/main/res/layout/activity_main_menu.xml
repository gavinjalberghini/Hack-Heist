<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@drawable/hacker_code_background">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainMenu">

        <ImageView
            android:id="@+id/MainMenu_PrimaryButtonsImage"
            android:layout_width="395dp"
            android:layout_height="380dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85"
            app:srcCompat="@drawable/main_menu_buttons" />

        <Button
            android:id="@+id/MainMenu_CampaignButton"
            android:layout_width="395dp"
            android:layout_height="109dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/MainMenu_PrimaryButtonsImage" />

        <Button
            android:id="@+id/MainMenu_LeaderboardButton"
            android:layout_width="177dp"
            android:layout_height="116dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MainMenu_CampaignButton" />

        <Button
            android:id="@+id/MainMenu_ResetButton"
            android:layout_width="177dp"
            android:layout_height="116dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MainMenu_LeaderboardButton" />

        <Button
            android:id="@+id/MainMenu_HelpScreenButton"
            android:layout_width="177dp"
            android:layout_height="116dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:text=""
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/MainMenu_PrimaryButtonsImage"
            app:layout_constraintTop_toBottomOf="@+id/MainMenu_CampaignButton" />

        <Button
            android:id="@+id/MainMenu_UserSettingsButton"
            android:layout_width="177dp"
            android:layout_height="116dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:text=""
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/MainMenu_PrimaryButtonsImage"
            app:layout_constraintTop_toBottomOf="@+id/MainMenu_HelpScreenButton" />

        <Button
            android:id="@+id/MainMenu_LogoutButton"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="LOGOUT"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MainMenu_PrimaryButtonsImage" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>