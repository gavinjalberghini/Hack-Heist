<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DevInformation"
    android:background="@drawable/hacker_code_background">

    <ImageView
        android:id="@+id/DevInformation_TeamAboutImage"
        android:layout_width="354dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/team_about_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DevInformation_BackButton" />

    <TextView
        android:id="@+id/DevInformation_BodyTextView"
        android:layout_width="350dp"
        android:layout_height="544dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#CCFFFFFF"
        android:text="The HackHeist development team consists of four VCU Engineering students studying Computer Science: Gavin Alberghini, Austin Gralheer, Joseph Hamlett, and Sinead Foley. The team was tasked with creating an Android application that teaches college level students how to write pseudocode and Java programs. We hope that you enjoy playing our game and that it encourages you to kick off a career in coding! "
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DevInformation_TeamAboutImage" />

    <ImageButton
        android:id="@+id/DevInformation_BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@android:drawable/btn_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>